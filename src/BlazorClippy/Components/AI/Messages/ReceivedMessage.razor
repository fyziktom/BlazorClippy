
<Card Background="Background.Warning" Class="bg-opacity-25" Style="min-width: 280px;" Margin="Margin.Is2.FromTop">
    <CardBody>
        @if (Message != null) 
        { 
            <CardText>@((MarkupString)Message.TextResponse)</CardText>
            <PlayMessage Response="@Message.TextResponse" />
        }
    </CardBody>
</Card>

@code {
    [Parameter]
    public WatsonMessageRequestRecord? Message { get; set; }
}
