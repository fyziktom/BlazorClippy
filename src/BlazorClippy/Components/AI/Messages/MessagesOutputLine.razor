@if (Message != null)
{
    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <Small>@(Message.Timestamp.ToString("MM.dd.yyyy hh:mm:ss"))</Small>
        </Column>
    </Row>
    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <SentMessage Message="@Message" />
        </Column>
        <Column>
            <ReceivedMessage Message="@Message" />
        </Column>
    </Row>
}
@code {
    [Parameter]
    public WatsonMessageRequestRecord? Message { get; set; }
}
